<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".activity.LoginPage">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/id_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/foodies"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/id_userPhoneNo"
        android:background="@drawable/seachbar_shape"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/icon_phone"
        android:paddingLeft="20dp"
        android:drawablePadding="15dp"
        android:hint="Mobile Number (10 digits)"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_below="@+id/id_logo"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/id_userPassword"
        android:background="@drawable/seachbar_shape"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/icon_lock"
        android:paddingLeft="20dp"
        android:drawablePadding="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="16"
        android:layout_below="@id/id_userPhoneNo"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_loginButton"
        android:layout_below="@+id/id_userPassword"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:background="@color/darkOrange"
        android:layout_margin="15dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_forgotPassword"
        android:text="Forgot Password?"
        android:textSize="15sp"
        android:layout_below="@+id/id_loginButton"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:id="@+id/id_underLineForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_forgotPassword"
        android:background="@drawable/seachbar_shape"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_signUp"
        android:text="@string/signUp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/id_underLine"
        />

    <View
        android:id="@+id/id_underLine"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/seachbar_shape"
        />

</RelativeLayout>