<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orange"
    tools:context=".fragments.Profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/id_profilePic"
        android:src="@drawable/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_userPName"
        android:text="UserName"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_profilePic"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/id_userPPhoneNo"
        android:background="@drawable/seachbar_shape"
        android:layout_below="@+id/id_userPName"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Mobile Number"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/id_userPEmail"
        android:background="@drawable/seachbar_shape"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/id_userPPhoneNo"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Email Id"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/id_userPAddress"
        android:background="@drawable/seachbar_shape"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/id_userPEmail"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Address"
        android:textSize="15sp"
        />
</RelativeLayout>