<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_menuRecyclerView_Items_UI"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@color/background_UI"
    android:weightSum="5"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/id_srnoMenu"
        android:text="1"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="2.7"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_dishNameMenu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Dish Name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_dishPriceMenu"
            android:text="100 Rs."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_below="@+id/id_dishNameMenu"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/id_addRemoveButtonMenu"
        android:layout_weight="1.3"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:text="Add"
        android:textColor="@color/white"
        />

</LinearLayout>